<div style="height: 100%; overflow: auto;">

    <div style="padding: 10px;">
    {{ form.datetime('datetimie', id['datetime'], '2010-03-01 20:20:20') }}
    </div>
    <div style="padding: 10px;">
    {{ form.input('text', id['text'], '2010-03-01 20:20:20') }}
    </div>
    <div style="padding: 10px;">
    {{ form.number('float', id['field1'], 0, -10, 10000, 2) }}
