{% if align == 'horizontal' %}
    {% set class = 'system-icon-default-horizontal' %}
{% endif %}
{% if align == 'vertical' %}
    {% set class = 'system-icon-default-vertical' %}
{% endif %}
{% if list is not empty %}
    <div class="system-icon-default-group {{ class }}">
    {% for icon in list %}
      <div id="{{ id['icon-'~ loop.index0] }}" class="system-icon-default system-icon-default-{{ theme }}" style="height: {{ height }}px;">
        <img src="{{ icon.img }}"><br>
        {{ icon.name }}
      </div>
    {% endfor %}
    </div>
{% endif %}


